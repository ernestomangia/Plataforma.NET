@model DTO.FactorDTO

@{
    ViewBag.Title = "Editar Factor";
}

<h2>Editar Factor</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Codigo)

    @Html.AntiForgeryToken()
    <div class="form-horizontal" role="form">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label for="inputNombre" class="col-lg-2 control-label">Nombre</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", id = "inputNombre", placeholder = "Nombre", @data_rule_required = "true" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputValor1" class="col-lg-2 control-label">Valor 1</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Valor1.Nombre, new { @class = "form-control", id = "inputValor1", placeholder = "Valor 1", @data_rule_required = "true" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputValor2" class="col-lg-2 control-label">Valor 2</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Valor2.Nombre, new { @class = "form-control", id = "inputValor2", placeholder = "Valor 2", @data_rule_required = "true" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputValor3" class="col-lg-2 control-label">Valor 3</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Valor3.Nombre, new { @class = "form-control", id = "inputValor3", placeholder = "Valor 3", @data_rule_required = "true" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<a class="btn btn-primary" href="@Url.Action("Index", "Factor")">
    Volver al Listado
</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
